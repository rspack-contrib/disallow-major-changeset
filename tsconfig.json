{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "target": "ES2021",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "module": "ES2020",
    "strict": true,
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "useDefineForClassFields": true
  },
  "include": ["src"]
}
